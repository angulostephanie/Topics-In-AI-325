package hw5;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Arrays;
import java.lang.Character;

public class InformationRetrieval {

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(
		        new InputStreamReader(new FileInputStream("descriptions.txt")));
		try {
		    String line;
		    String lineCap3 = null;
		    char firstD;
		    char secondD;
		    char thirdD;
		    char space;
		    char uLetter;
		    int sum = 0;
		    while ((line = br.readLine()) != null) {
		        if(line.toLowerCase().contains("prerequisite")) {
		        	String preReqLine = line;
		        	for(int i = 0; i <= preReqLine.length(); i++) {
		        		if(i < (preReqLine.length()-4)) {
		        			uLetter = preReqLine.charAt(i);
		        			space = preReqLine.charAt(i+1);
		        			firstD = preReqLine.charAt(i+2);
			        		secondD = preReqLine.charAt(i+3);
			        		thirdD = preReqLine.charAt(i+4);
			        		if(Character.isUpperCase(uLetter) && Character.isWhitespace(space) && Character.isDigit(firstD) && Character.isDigit(secondD) && Character.isDigit(thirdD)) {
			        			System.out.println(preReqLine);
			        			sum+= 1; //604
			        			break; 
			        		}			        		
		        		}
		        		
		        		/*char ch = preReqLine.charAt(i);
		        		if(i != (preReqLine.length()-1)) {
		        			char nextCh = preReqLine.charAt(i+1);
		        			if(i != (preReqLine.length()-2)) {
		        				char nextNextCh = preReqLine.charAt(i+2);
		        				if(Character.isUpperCase(ch) && Character.isUpperCase(nextCh) && Character.isUpperCase(nextNextCh)) {
			        				lineCap3 = preReqLine;
			        				sum+=1; //571
			        				break;
			        			}
		        			}
		        		} 	*/
		        		
		        	} 
		        	
		        }
		    	
		    }
		    System.out.println(sum);
		} finally {
		    br.close();
		}


	}

}
